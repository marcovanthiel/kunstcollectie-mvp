generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(USER)
  artworks  Artwork[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Artwork {
  id          String   @id @default(uuid())
  title       String
  description String?
  year        Int?
  medium      String?
  dimensions  String?
  location    String?
  imageUrl    String?
  value       Float?
  artist      Artist?  @relation(fields: [artistId], references: [id])
  artistId    String?
  type        ArtworkType @relation(fields: [typeId], references: [id])
  typeId      String
  owner       User     @relation(fields: [ownerId], references: [id])
  ownerId     String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Artist {
  id          String   @id @default(uuid())
  name        String
  biography   String?
  birthYear   Int?
  deathYear   Int?
  nationality String?
  artworks    Artwork[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model ArtworkType {
  id          String   @id @default(uuid())
  name        String   @unique
  description String?
  artworks    Artwork[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

enum Role {
  USER
  ADMIN
}
